<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PredictionActivity"
        android:orientation="horizontal">

    <TextureView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textureViewPrediction"/>
    <!--textureview for showing the preview-->

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:id="@+id/imageViewPrediction"/>
    <!--imageview for drawing the detection result-->

    <Button
            android:id="@+id/backButton1"
            android:layout_width="199dp"
            android:layout_height="82dp"
            tools:layout_editor_absoluteY="616dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="51dp"
            android:text="Back"/>


</RelativeLayout>